<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    <!-- Spring上下文工具类 -->
    <bean id="springContextHelper" class="com.tinytrustframework.epos.common.utils.spring.SpringContextHelper"></bean>

    <!-- 注解扫描的包 -->
    <context:component-scan base-package="com.tinytrustframework"/>

    <!-- 开启注解 -->
    <mvc:annotation-driven/>

    <!-- 静态资源 -->
    <mvc:default-servlet-handler/>

    <mvc:interceptors>
        <bean class="com.tinytrustframework.epos.web.interceptor.SessionSecurityInterceptor">
            <!-- 不需要进行会话验证验证  -->
            <property name="excludePathList">
                <list>
                    <value>/index.html</value>
                    <value>/system/index</value><!-- 转发至登陆页面 -->
                    <value>/system/login</value><!-- 登陆操作 -->
                    <value>/system/register</value><!-- 转发至注册页面 -->
                    <value>/user/register</value><!-- 注册操作 -->
                    <value>/system/cellphone_unique_check</value><!-- 手机号码重复性校验 -->
                    <value>/system/captcha_check</value><!-- 验证码校验 -->
                    <value>/order/notify</value><!-- 订单通知 -->
                </list>
            </property>
        </bean>
    </mvc:interceptors>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
</beans>